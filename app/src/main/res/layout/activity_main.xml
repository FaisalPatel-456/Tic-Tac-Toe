<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#369FF3"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/btn5"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/button_image5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn4"
        android:layout_toStartOf="@id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/button_image4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn6"
        android:layout_toEndOf="@id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/button_image6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:background="#F69E78"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn5"/>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:background="#F69E78"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn5"/>

    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="330dp"
        android:background="#F69E78"
        android:layout_marginEnd="-14dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/btn5"/>

    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="330dp"
        android:background="#F69E78"
        android:layout_marginStart="-14dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/btn5"/>

    <Button
        android:id="@+id/reset_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Reset"
        android:backgroundTint="@color/teal_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/btn8"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="22dp"
        android:layout_below="@id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/button_image8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn7"
        android:layout_marginTop="22dp"
        android:layout_toStartOf="@id/btn8"
        android:layout_below="@id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/button_image7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn9"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@id/btn8"
        android:layout_below="@id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/button_image9"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/score_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Score X : 0"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/score_o"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Score Y : 0"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/player_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:text="Player X turn"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="22dp"
        android:layout_above="@id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/button_image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_marginBottom="22dp"
        android:layout_toStartOf="@id/btn2"
        android:layout_above="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_width="90dp"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/button_image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn3"
        android:layout_marginBottom="22dp"
        android:layout_toEndOf="@id/btn2"
        android:layout_above="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_width="90dp"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/button_image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

</RelativeLayout>